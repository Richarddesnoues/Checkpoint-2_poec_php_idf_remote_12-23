{% block content %} 
    {% if errors > 0 %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% if succes %}
        <div class="alert alert-success">
            <p>{{ succes }}</p>
        </div>
    {% endif %}    
    {% endif %}
{% endblock %}

<form action="" method="post">
    <div class="form-group">
        <label for="name">Accessory name</label>
        <input type="text" name="name" id="name">
    </div>
    <div class="form-group">
        <label for="url">Accessory image URL</label>
        <input type="url" name="url" id="url">
    </div>
    <div class="form-btn">
    <button class="btn primary-btn">Create this accessory</button>
    </div>
</form>
